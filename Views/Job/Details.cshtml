@model AssignmentJobPortal.Models.JobViewModel
@using AssignmentJobPortal.Entities
@using System.Security.Claims
@{
    ViewData["Title"] = "Job Details";
    var userId = User.FindFirst(ClaimTypes.NameIdentifier)?.Value;
}
<!-- job post company Start -->
<div class="job-post-company pt-120 pb-120">
    <div class="container">
        <div class="row justify-content-between">
            <!-- Left Content -->
            <div class="col-xl-7 col-lg-8">
                <!-- job single -->
                <div class="single-job-items mb-50">
                    <div class="job-items">
                        <div class="job-tittle">
                            <a href="#">
                                <h4>@Model.Title</h4>
                            </a>
                            <ul>
                                <li>@Model.CompanyName</li>
                                <li><i class="fas fa-map-marker-alt"></i>@Model.CompanyAddress</li>
                                <li>$@Model.Salary</li>
                            </ul>
                        </div>
                    </div>
                </div>
                <!-- job single End -->
                <div class="job-post-details">
                    <div class="post-details1 mb-50">
                        <!-- Small Section Tittle -->
                        <div class="small-section-tittle">
                            <h4>Job Description</h4>
                        </div>
                        <p>@Model.Description</p>
                    </div>
                </div>
            </div>
            <!-- Right Content -->
            <div class="col-xl-4 col-lg-4">
                <div class="post-details3 mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Job Overview</h4>
                    </div>
                    <ul>
                        <li>Posted date : <span>@Model.PostedDate.ToString("dd MMM yyyy")</span></li>
                        <li>Location : <span>@Model.CompanyAddress</span></li>
                        <li>Salary : <span>$@Model.Salary</span></li>
                        <li>Application date : <span>@Model.ClosingDate.ToString("dd MMM yyyy")</span></li>
                    </ul>
                    <div class="apply-btn2">
                        <a href="@Url.Action("Create", "JobApplication", new { jobId = Model.Id, userId = userId})" class="btn">Apply Now</a>
                    </div>
                </div>
                <div class="post-details4 mb-50">
                    <!-- Small Section Tittle -->
                    <div class="small-section-tittle">
                        <h4>Company Information</h4>
                    </div>
                    <span>@Model.CompanyName</span>
                    <ul>
                        <li>Name: <span>@Model.CompanyName</span></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- job post company End -->
