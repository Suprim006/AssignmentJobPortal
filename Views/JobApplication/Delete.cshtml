@model AssignmentJobPortal.Models.JobApplicationViewModel

@{
    ViewBag.Title = "Delete Job Application";
}

<h2>@ViewBag.Title</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <div>
        <h4>Job Application</h4>
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.ApplicationDate)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.ApplicationDate)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.UserName)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.UserName)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.JobTitle)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.JobTitle)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.CoverLetter)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.CoverLetter)
            </dd>
        </dl>
    </div>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
