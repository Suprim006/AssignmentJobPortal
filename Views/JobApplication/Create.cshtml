@model AssignmentJobPortal.Models.JobApplicationViewModel

@{
    ViewBag.Title = "Create Job Application";
}

<h2>@ViewBag.Title</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ApplicationDate" class="control-label"></label>
        <input asp-for="ApplicationDate" class="form-control" />
        <span asp-validation-for="ApplicationDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="control-label">User</label>
        <input class="form-control" value="@Model.UserName" readonly />
    </div>

    <div class="form-group">
        <label class="control-label">Job Title</label>
        <input class="form-control" value="@Model.JobTitle" readonly />
    </div>
    <!-- Hidden input for UserId -->
    <input type="hidden" asp-for="UserId" />

    <!-- Hidden input for JobId -->
    <input type="hidden" asp-for="JobId" />

    <div class="form-group">
        <label asp-for="CoverLetter" class="control-label"></label>
        <textarea asp-for="CoverLetter" class="form-control"></textarea>
        <span asp-validation-for="CoverLetter" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Submit Application" class="btn btn-primary" />
    </div>
</form>

<a asp-action="Index">Back to Job Listings</a>
