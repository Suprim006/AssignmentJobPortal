@{
    ViewData["Title"] = "Home Page";
    var categories = ViewBag.Categories as List<AssignmentJobPortal.Entities.Categories>;
    var companies = ViewBag.Companies as List<AssignmentJobPortal.Entities.Companies>;
}
@model IEnumerable<AssignmentJobPortal.Models.CategoryViewModel>
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}


<!-- slider Area Start-->
<div class="slider-area ">
    <!-- Mobile Menu -->
    <div class="slider-active">
        <div class="single-slider slider-height d-flex align-items-center" data-background="~/img/hero/h1_hero.jpg">
            <div class="container">
                <div class="row">
                    <div class="col-xl-6 col-lg-9 col-md-10">
                        <div class="hero__caption">
                            <h1>Find the most exciting startup jobs</h1>
                        </div>
                    </div>
                </div>
                <!-- Search Box -->
                <div class="row">
                    <div class="col-xl-8">
                        <!-- form -->
                        <form action="#" class="search-box">
                            <div class="input-form">
                                <input type="text" placeholder="Job Tittle or keyword">
                            </div>
                            <div class="select-form">
                                <div class="select-itms">
                                    <select name="select" id="select1">
                                        <option value="">Location BD</option>
                                        <option value="">Location PK</option>
                                        <option value="">Location US</option>
                                        <option value="">Location UK</option>
                                    </select>
                                </div>
                            </div>
                            <div class="search-form">
                                <a asp-controller="Job" asp-action="Index">Find a Job</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- slider Area End-->
<!-- Our Services Start -->
<div class="container">
    <!-- Section Title -->
    <div class="row">
        <div class="col-lg-12">
            <div class="section-tittle text-center">
                <span>FEATURED CATEGORIES</span>
                <h2>Browse Top Categories</h2>
            </div>
        </div>
    </div>
    <div class="row d-flex justify-content-center">
        @if (categories != null && categories.Any())
        {
            @foreach (var category in categories)
            {
                <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                    <div class="single-services text-center mb-30">
                        <div class="services-ion">
                            <!-- Replace with appropriate icon for category -->
                            <span class="flaticon-category-icon"></span>
                        </div>
                        <div class="services-cap">
                            <h5>
                                <a asp-controller="Jobs" asp-action="Index" asp-route-categoryId="@category.Id">
                                    @category.Name
                                </a>
                            </h5>
                            <span>@category.Description</span>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <p>No categories available at the moment.</p>
        }
    </div>

    <!-- More Btn -->
    <!-- Section Button -->
    <div class="row">
        <div class="col-lg-12">
            <div class="browse-btn2 text-center mt-50">
                <a asp-controller="Category" asp-action="Index" class="broder-btn2">Browse All Categories</a>
            </div>
        </div>
    </div>
</div>
<!-- Our Services End -->
<!-- Online CV Area Start -->
<div class="online-cv cv-bg section-overly pt-90 pb-120" data-background="~/img/gallery/cv_bg.jpg">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-10">
                <div class="cv-caption text-center">
                    <p class="pera1">FEATURED TOURS Packages</p>
                    <p class="pera2"> Make a Difference with Your Online Resume!</p>
                    <a asp-controller="Jobs" asp-action="Index" class="border-btn2 border-btn4">Upload your CV</a>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Online CV Area End-->

